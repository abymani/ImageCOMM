<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.abymani.image_comm.RecieveFile"
    android:background="@drawable/back">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_layout"
        ></include>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn"
        android:text="Boundary detection"
        android:onClick="boundry"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:background="@drawable/button_style" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn2"
        android:text="Take Pictures"
        android:onClick="take_picture"
        android:layout_below="@+id/btn"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:background="@drawable/button_style" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startReceiving"
        android:id="@+id/button"
        android:layout_above="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="startreceiving"/>


</RelativeLayout>